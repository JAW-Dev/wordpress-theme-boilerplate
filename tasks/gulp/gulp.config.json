{
	"development": {
		"minify": true,
		"postcss": true,
		"sourcemaps": true,
		"webpack": true,
		"srcDir": "assets/",
		"entryDir": {
			"images": "images/",
			"sass": "css/sass/",
			"javascript": "js/",
			"scripts": "js/scripts/",
        	"styles": "css/"
		},
		"outputDir": {
			"dist": "./dist/",
			"images": "images/",
			"sass": "css/sass/",
			"javascript": "js/",
			"styles": "css/"
		},
		"files": {
			"css": "style.css",
			"cssmin": "style.min.css",
			"html": [ "./*.html", "./**/*.html" ],
			"images": "**/*",
			"js": "script.js",
			"jsmin": "script.min.js",
			"jsSrc": "index.js",
			"scriptsSrc": "**/*.js",
			"php": [ "./*.php", "./**/*.php" ],
			"sass": "**/*.scss"
		},
		"excludes": [
			"./**/*",
			"!assets/css/sass",
			"!assets/css/sass/**",
			"!assets/js/scripts",
			"!assets/js/scripts/**",
			"!bin",
			"!bin/**",
			"!dist",
			"!dist/**",
			"!git",
			"!git/**",
			"!node_modules",
			"!node_modules/**",
			"!tasks",
			"!tasks/**",
			"!tests",
			"!tests/**",
			"!.bablerc",
			"!.editorconfig",
			"!.eslintrc.js",
			"!.gitignore",
			"!.sas-lint.yml",
			"!.travis.yml",
			"!gulpfile.babel.js",
			"!package-lock.json",
			"!package.json",
			"!phpcs.xml",
			"!phpmd.xml",
			"!phpunit.xml",
			"!yarn.lock"
		]
	},
	"production": {
		"minify": true,
		"postcss": true,
		"sourcemaps": true,
		"webpack": true,
		"srcDir": "assets/",
		"entryDir": {
			"images": "images/",
			"sass": "css/sass/",
			"javascript": "js/",
			"scripts": "js/scripts/",
        	"styles": "css/"
		},
		"outputDir": {
			"dist": "./dist/",
			"images": "images/",
			"sass": "css/sass/",
			"javascript": "js/",
			"styles": "css/"
		},
		"files": {
			"css": "style.css",
			"cssmin": "style.min.css",
			"html": [ "./*.html", "./**/*.html" ],
			"images": "**/*",
			"js": "script.js",
			"jsmin": "script.min.js",
			"jsSrc": "index.js",
			"scriptsSrc": "**/*.js",
			"php": [ "./*.php", "./**/*.php" ],
			"sass": "**/*.scss"
		},
		"excludes": [
			"./**/*",
			"!assets/css/sass",
			"!assets/css/sass/**",
			"!assets/js/scripts",
			"!assets/js/scripts/**",
			"!bin",
			"!bin/**",
			"!dist",
			"!dist/**",
			"!git",
			"!git/**",
			"!node_modules",
			"!node_modules/**",
			"!tasks",
			"!tasks/**",
			"!tests",
			"!tests/**",
			"!.bablerc",
			"!.editorconfig",
			"!.eslintrc.js",
			"!.gitignore",
			"!.sas-lint.yml",
			"!.travis.yml",
			"!gulpfile.babel.js",
			"!package-lock.json",
			"!package.json",
			"!phpcs.xml",
			"!phpmd.xml",
			"!phpunit.xml",
			"!yarn.lock"
		]
	}
